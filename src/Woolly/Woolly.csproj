<Project Sdk="Microsoft.NET.Sdk.Worker">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <AssemblyName>woolly</AssemblyName>
    <Nullable>enable</Nullable>
    <UserSecretsId>dotnet-Woolly-8E12652B-F092-4ECE-A56E-117063D200A6</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DSharpPlus" Version="4.0.0-rc1" />
    <PackageReference Include="DSharpPlus.CommandsNext" Version="4.0.0-rc1" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Systemd" Version="5.0.1" />
    <PackageReference Include="RconSharp" Version="2.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="install.sh" CopyToOutputDirectory="Always" />
    <Content Include="secrets.conf" CopyToOutputDirectory="Always" />
    <Content Include="woolly.service" CopyToOutputDirectory="Always" />
  </ItemGroup>
</Project>
